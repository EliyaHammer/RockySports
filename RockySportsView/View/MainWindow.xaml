<Window x:Class="RockySportsView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RockySportsView"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Cursor="None" Background="#FFC0E2F0">
            <RadioButton Content="לפי עובד" HorizontalAlignment="Left" Margin="435,237,0,0" VerticalAlignment="Top" Width="167" FlowDirection="RightToLeft" Height="43" FontWeight="Bold" FontSize="16" VerticalContentAlignment="Center"/>
            <RadioButton Content="לפי חודש" HorizontalAlignment="Left" Margin="435,281,0,0" VerticalAlignment="Top" Width="167" FlowDirection="RightToLeft" Height="43" FontWeight="Bold" FontSize="16" VerticalContentAlignment="Center"/>
            <RadioButton Content="לפי עובד לחודש" HorizontalAlignment="Left" Margin="435,324,0,0" VerticalAlignment="Top" Width="167" FlowDirection="RightToLeft" Height="43" FontWeight="Bold" FontSize="16" VerticalContentAlignment="Center"/>
            <ComboBox HorizontalAlignment="Left" Height="24" Margin="185,248,0,0" VerticalAlignment="Top" Width="233" BorderBrush="White" Background="White"/>
            <ComboBox HorizontalAlignment="Left" Height="24" Margin="185,291,0,0" VerticalAlignment="Top" Width="233" BorderBrush="White" Background="White"/>
            <ComboBox HorizontalAlignment="Left" Height="24" Margin="185,334,0,0" VerticalAlignment="Top" Width="233" BorderBrush="White" Background="White"/>
            <Button x:Name="clockOne" Content="בחר&#xD;&#xA;" HorizontalAlignment="Left" Height="24" Margin="122,248,0,0" VerticalAlignment="Top" Width="47" BorderBrush="Black" FontSize="16" Cursor="Hand" BorderThickness="0,0,0,1" MouseEnter="clockOne_MouseEnter" ClipToBounds="True" Click="clockOne_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Medium">
                <Button.Background>
                    <SolidColorBrush Color="#FF83A8B6" Opacity="0.5"/>
                </Button.Background>
                <Button.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.OpacityMask>
            </Button>
            <Button x:Name="clockOne_Copy" Content="בחר&#xA;" HorizontalAlignment="Left" Height="24" Margin="122,291,0,0" VerticalAlignment="Top" Width="47" BorderBrush="Black" FontSize="16" Cursor="Hand" BorderThickness="0,0,0,1" MouseEnter="clockOne_MouseEnter" ClipToBounds="True" Click="clockOne_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Medium">
                <Button.Background>
                    <SolidColorBrush Color="#FF83A8B6" Opacity="0.5"/>
                </Button.Background>
                <Button.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.OpacityMask>
            </Button>
            <Button x:Name="clockOne_Copy1" Content="בחר&#xA;" HorizontalAlignment="Left" Height="24" Margin="122,334,0,0" VerticalAlignment="Top" Width="47" BorderBrush="Black" FontSize="16" Cursor="Hand" BorderThickness="0,0,0,1" MouseEnter="clockOne_MouseEnter" ClipToBounds="True" Click="clockOne_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Medium">
                <Button.Background>
                    <SolidColorBrush Color="#FF83A8B6" Opacity="0.5"/>
                </Button.Background>
                <Button.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.OpacityMask>
            </Button>
        </Grid>
        <Label Content="ייבא דו''ח" Height="45" Margin="330,45,0,0" Width="116" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontWeight="Bold" BorderThickness="0,0,0,1" SnapsToDevicePixels="True" BorderBrush="Black"/>
        <Label Content="הצג דו''ח" Height="45" Margin="330,171,0,0" Width="116" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontWeight="Bold" BorderThickness="0,0,0,1" SnapsToDevicePixels="True" BorderBrush="Black"/>
    </Grid>
</Window>
